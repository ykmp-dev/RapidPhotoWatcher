<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:RapidPhotoWatcher.Avalonia.ViewModels"
             x:Class="RapidPhotoWatcher.Avalonia.Views.UserControls.FileNamingView"
             x:DataType="vm:FileNamingViewModel">

    <ScrollViewer>
        <StackPanel Spacing="24" Margin="20">
            
            <!-- プレフィックス設定セクション -->
            <Border Classes="section-card">
                <StackPanel Spacing="16">
                    <TextBlock Text="🏷️ プレフィックス設定" Classes="section-title"/>
                    
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto">
                        <!-- プレフィックスタイプ選択 -->
                        <RadioButton Grid.Row="0" Grid.Column="0"
                                    Content="📝 カスタムテキスト"
                                    IsChecked="{Binding UseCustomPrefix}"
                                    GroupName="PrefixType"
                                    FontWeight="SemiBold"/>
                        
                        <RadioButton Grid.Row="0" Grid.Column="1"
                                    Content="📅 撮影日時"
                                    IsChecked="{Binding UseDateTime}"
                                    GroupName="PrefixType"
                                    FontWeight="SemiBold"/>
                        
                        <!-- カスタムプレフィックス -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                   Orientation="Horizontal" Spacing="8" Margin="0,12,0,0">
                            <TextBlock Text="接頭辞:" VerticalAlignment="Center" Width="60"/>
                            <TextBox Text="{Binding CustomPrefix}"
                                    Width="200"
                                    IsEnabled="{Binding CanEditCustomPrefix}"
                                    Watermark="IMG_"/>
                        </StackPanel>
                        
                        <!-- 日時フォーマット -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                                   Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
                            <TextBlock Text="日時形式:" VerticalAlignment="Center" Width="60"/>
                            <ComboBox Items="{Binding DateTimeFormats}"
                                     SelectedIndex="{Binding SelectedDateTimeFormat}"
                                     Width="300"
                                     IsEnabled="{Binding CanEditDateTimeFormat}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- 区切り文字・連番設定セクション -->
            <Border Classes="section-card">
                <StackPanel Spacing="16">
                    <TextBlock Text="🔢 連番・区切り文字設定" Classes="section-title"/>
                    
                    <Grid ColumnDefinitions="Auto,*,Auto,*" RowDefinitions="Auto,Auto,Auto">
                        <!-- 区切り文字 -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                  Text="区切り文字:" 
                                  VerticalAlignment="Center" 
                                  Margin="0,0,12,0"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" 
                                 Items="{Binding SeparatorTypes}"
                                 SelectedIndex="{Binding SelectedSeparator}"
                                 Width="150"/>
                        
                        <!-- 連番桁数 -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                  Text="連番桁数:" 
                                  VerticalAlignment="Center" 
                                  Margin="0,12,12,0"/>
                        <NumericUpDown Grid.Row="1" Grid.Column="1" 
                                      Value="{Binding SequenceDigits}"
                                      Minimum="1" Maximum="10"
                                      Width="80"
                                      Margin="0,12,0,0"/>
                        
                        <!-- 開始番号 -->
                        <TextBlock Grid.Row="1" Grid.Column="2" 
                                  Text="開始番号:" 
                                  VerticalAlignment="Center" 
                                  Margin="20,12,12,0"/>
                        <StackPanel Grid.Row="1" Grid.Column="3" 
                                   Orientation="Horizontal" 
                                   Spacing="8" 
                                   Margin="0,12,0,0">
                            <NumericUpDown Value="{Binding SequenceStartNumber}"
                                          Minimum="1" Maximum="9999999"
                                          Width="100"/>
                            <Button Command="{Binding ResetSequenceCommand}"
                                   Classes="secondary"
                                   ToolTip.Tip="連番を1にリセット">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="🔄" FontSize="12"/>
                                    <TextBlock Text="リセット" FontSize="11"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- プレビューセクション -->
            <Border Classes="section-card preview">
                <StackPanel Spacing="12">
                    <TextBlock Text="👀 ファイル名プレビュー" Classes="section-title"/>
                    
                    <Border Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                           CornerRadius="8"
                           Padding="16">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="例:" 
                                      VerticalAlignment="Center"
                                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock Text="{Binding FileNamePreview}"
                                      FontFamily="Consolas"
                                      FontSize="14"
                                      FontWeight="Bold"
                                      Foreground="{DynamicResource SystemAccentColor}"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
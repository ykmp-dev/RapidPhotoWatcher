<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RapidPhotoWatcher.Avalonia.App"
             RequestedThemeVariant="Default">
    
    <!-- Application Icon -->
    <Application.Icon>
        <Bitmap Source="/Assets/app_icon.ico"/>
    </Application.Icon>

    <!-- Application Styles -->
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="/Styles/Styles.axaml"/>
    </Application.Styles>

    <!-- Application Resources -->
    <Application.Resources>
        <!-- Global Application Resources -->
        <SolidColorBrush x:Key="AppBackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="AppForegroundBrush" Color="#1F2937"/>
    </Application.Resources>
    
</Application>